<% title = 'Home - Inventory App'; %>

<h2>Categories</h2>
<% categories.map((category)=>{ %>
<div class="category-id">ID: <%= category.category_id %></div>
<div class="category-name">
  <a href="/category/<%=category.category_id%>"><%= category.name %></a>
</div>
<div class="category-description">DESC: <%= category.description %></div>
<%})%>
<a href="/category/new">New Category</a>

<h2>Brands</h2>
<% brands.map((brand)=>{ %>
<div class="brand-id">ID: <%= brand.brand_id %></div>
<div class="brand-name">
  <a href="/brand/<%=brand.brand_id%>"><%= brand.name %></a>
</div>
<div class="brand-description">DESC: <%= brand.description %></div>
<%})%>
<a href="/brand/new">New Brand</a>

<h2>Product inventory</h2>
<% products.map((product)=>{ %>
<div class="product-id">ID: <%= product.product_id %></div>
<div class="product-name">
  <a href="/product/<%= product.product_id %>"><%= product.name %></a>
</div>
<div class="product-quantity">QTY: <%= product.quantity_in_stock %></div>
<%})%>
<a href="/product/new">New Product</a>
